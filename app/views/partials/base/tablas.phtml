<script>
	// ! Table
	$(document).ready(function(){
		// Add with-table class to boxes with tables to remove paddings
		$('.box').each(function(){
			var $box = $(this);
			if ($box.children('.content').children('table').length) {
				$box.addClass('with-table');
			}
		});
		
		// Initialize DataTables for dynamic tables
		$('table.dynamic').table();
	
	});
</script>